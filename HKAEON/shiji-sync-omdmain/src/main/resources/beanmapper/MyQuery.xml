<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mybatis.sql.user">	
	<select id="select_user_forbind" parameterType="String" resultType="MapCase">
    	select * from user where usercode=#{usercode}
	</select>
	
	<select id="select_user_forstr" parameterType="Map" resultType="MapCase">
		select * from user 
		<if test="usercode != null">
			where usercode='${usercode}'
		</if>
	</select>

	<select id="insert_myuser" parameterType="Map" resultType="MapCase">
	    insert into mydata.myuser
	    values(#{seqno},#{code},#{name},#{pointvalue},#{createdate})
	</select>

	<select id="update_myuser" parameterType="Map" resultType="MapCase">
		update mydata.myuser
		   set code=#{code},
		       name=#{name},
		       pointvalue=#{pointvalue},
		       createdate=#{createdate}
	     where seqno=#{seqno}
	</select>

	<select id="delete_myuser" parameterType="Map" resultType="MapCase">
		delete from mydata.myuser 
	     where seqno=#{seqno}
	</select>


	<select id="query_myuser" parameterType="String" resultType="MapCase">
    	select * from mydata.myuser
		<if test="seqno != null">
			where seqno=#{seqno}
		</if>
	</select>
</mapper>
