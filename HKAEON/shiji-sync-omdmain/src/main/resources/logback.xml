<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <contextName>logback</contextName>
  <property name="log.path" value="/opt/logs"/>
  <property name="module" value="shiji-sync-omdmain"/>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <!-- <filter class="ch.qos.logback.classic.filter.ThresholdFilter" >
         <level>WARN</level>
     </filter>-->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${log.path}/${module}.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${log.path}.%d{yyyy-MM-dd}.zip</fileNamePattern>
    </rollingPolicy>
    <encoder>
      <pattern>%date %level [%thread] %logger{36} [%file : %line] %msg%n
      </pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="console"/>
    <appender-ref ref="file"/>
  </root>

  <logger name="com.efuture.common" level="debug"/>
  <logger name="org.mybatis" level="info"/>
  <logger name="com.xxl.job" level="OFF"/>
  <logger name="com.product" level="error"/>

</configuration>