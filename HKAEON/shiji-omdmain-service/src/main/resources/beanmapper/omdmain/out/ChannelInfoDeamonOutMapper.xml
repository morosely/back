<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="beanmapper.out.ChannelInfoDeamonOutMapper">
  <resultMap id="BaseResultMap" type="java.util.Map">
    <result column="entId" jdbcType="BIGINT" property="ent_id" />
    <result column="channelCode" jdbcType="VARCHAR" property="code" />
    <result column="channelName" jdbcType="VARCHAR" property="name" />
  </resultMap>
  
  <select id="search" parameterType="map" resultMap="BaseResultMap">
		SELECT
		b.entId,b.channelCode,b.channelName
		FROM
		channelInfo b where b.entId=#{entId}
		<if test="code != null">
			AND b.channelCode = #{code}
		</if>
		<if test="name != null">
			AND b.channelName = #{name}
		</if>
		<if test="page_no != null and page_size != null">
			limit ${page_no},${page_size}
		</if>
	</select>
	
	<select id="count" parameterType="map" resultType="long">
		SELECT
		count(1)
		FROM
		channelInfo b where b.entId=#{entId}
		<if test="code != null">
			AND b.channelCode = #{code}
		</if>
		<if test="name != null">
			AND b.channelName = #{name}
		</if>
	</select>
</mapper>