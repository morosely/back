<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="beanmapper.out.BusinessCompanyDeamonMapper">
  <resultMap id="BaseResultMap" type="java.util.Map">
    <!--
      WARNING - @mbg.generated
    -->
   <!--  <id column="bcid" jdbcType="BIGINT" property="bcid" /> -->
    <result column="entId" jdbcType="BIGINT" property="ent_id" />
    <result column="erpCode" jdbcType="VARCHAR" property="code" />
    <result column="erpName" jdbcType="VARCHAR" property="name" />
  <!--   <result column="status" jdbcType="INTEGER" property="status" /> -->
  </resultMap>
  
  <select id="search" parameterType="map" resultMap="BaseResultMap">
		SELECT
		b.entId,b.erpCode,b.erpName
		FROM
		businessCompany b where b.entId=#{entId}
		<if test="status != null">
			AND b.status = #{status}
		</if>
		<if test="code != null">
			AND b.erpCode = #{code}
		</if>
		<if test="name != null">
			AND b.erpName = #{name}
		</if>
		<if test="page_no != null and page_size != null">
			limit ${page_no},${page_size}
		</if>
	</select>
</mapper>