<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="beanmapper.out.VenderDeamonOutMapper">
  <resultMap id="BaseResultMap" type="java.util.Map">
    <id column="vid" jdbcType="BIGINT" property="oid" />
    <result column="entId" jdbcType="BIGINT" property="ent_id" />
    <result column="venderCode" jdbcType="VARCHAR" property="code" />
    <result column="venderName" jdbcType="VARCHAR" property="name" />
    <result column="erpCode" jdbcType="VARCHAR" property="jygs" />
  </resultMap>
  
   <select id="search" parameterType="map" resultMap="BaseResultMap">
		SELECT
		b.entId,b.venderCode,b.venderName,b.erpCode,b.vid
		FROM
		vender b where b.entId=#{entId}
		<if test="oid != null">
			AND b.vid = #{oid}
		</if>
		<if test="code != null">
			AND b.venderCode = #{code}
		</if>
		<if test="name != null">
			AND b.venderName = #{name}
		</if>
		<if test="jygs != null">
			AND b.erpCode = #{jygs}
		</if>
		<if test="page_no != null and page_size != null">
			limit ${page_no},${page_size}
		</if>
	</select>
	
	<select id="count" parameterType="map" resultType="long">
		SELECT
		count(1)
		FROM
		vender b where b.entId=#{entId}
		<if test="oid != null">
			AND b.vid = #{oid}
		</if>
		<if test="code != null">
			AND b.venderCode = #{code}
		</if>
		<if test="name != null">
			AND b.venderName = #{name}
		</if>
		<if test="jygs != null">
			AND b.erpCode = #{jygs}
		</if>
	</select>
</mapper>