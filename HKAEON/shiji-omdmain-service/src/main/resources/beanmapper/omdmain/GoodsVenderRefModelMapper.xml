  <select id="selectByState" parameterType="map" resultType="java.util.Map">
  	SELECT r.*
  	FROM GoodsVenderRef r
  	WHERE 1=1
  	<if test="entId != null">
  		AND r.entId = #{entId}
  	</if>
  	<if test="shopId != null">
  		AND r.shopId = #{shopId}
  	</if>
  	ORDER BY r.entId, r.shopId, r.defaultSort
  </select>
  
  <select id="selectByGoodsCodeIn" parameterType="map" resultType="java.util.Map">
  	SELECT r.*, v.venderName, v.venderType, v.vendersName, v.venderEnName, v.venderStatus
  	FROM GoodsVenderRef r, Vender v
  	WHERE 1=1
  	<if test="entId != null">
  		AND r.entId = #{entId}
  	</if>
  	<if test="shopId != null">
  		AND r.shopId = #{shopId}
  	</if>
  	AND r.entId = v.entId AND r.venderCode = v.venderCode AND r.goodsCode IN
  	<foreach item="item" index="index" collection="goodsCodes" open="(" separator="," close=")">
		#{item}
	</foreach>
  </select>
  
  <select id="selectInfo" parameterType="map" resultType="java.util.Map">
  	SELECT r.*, v.venderStatus, v.venderName
  	FROM GoodsVenderRef r, Vender v
  	WHERE 1=1 
  	<if test = "entId != null">
  		AND r.entId = #{entId}
  	</if>
  	<if test = "shopId != null">
  		AND r.shopId = #{shopId}
  	</if>
  	<if test = "goodsCode != null">
	  	AND r.goodsCode = #{goodsCode}
  	</if>
  	AND r.entId = v.entId AND r.venderCode = v.venderCode 
